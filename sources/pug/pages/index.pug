							h6.box-nina-title: a(href='#') Interiors
						.col-sm-4.box-nina.wow.fadeInUp(data-wow-delay='.2s')
							.box-nina-icon
								span.icon.icon-lg.text-gray-800.linearicons-compass
							h6.box-nina-title: a(href='#') Planning

				.col-lg-4.col-xxl-3.offset-top-lg-120.text-center.text-lg-left
